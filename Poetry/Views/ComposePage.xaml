<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Poetry.ComposePage">
	<ContentPage.Content>
		<StackLayout BackgroundColor="#1FAECE" Orientation="Vertical">
			<StackLayout HorizontalOptions="Center" Padding="0,20,0,0">
				<Entry x:Name="PTitle" HorizontalTextAlignment="Center" 
					Placeholder="Poem Title" BackgroundColor="Transparent" 
					FontSize="30"
					TextColor="White"
					FontFamily="Baskerville-BoldItalic"
					/>
				<Editor x:Name="Poem" Text="Poem" 
						WidthRequest="300" HeightRequest="550" 
						BackgroundColor="Transparent" 
						Keyboard="Text" 
						FontSize="Large"
						TextColor="#2C7797"
						FontFamily="Baskerville-BoldItalic"
					/>
			</StackLayout>
			<StackLayout VerticalOptions="End" HorizontalOptions="Center" 
					Padding="0,0,0,15">
				<Button x:Name="Save" Text="Save" BackgroundColor="#91E2F4" 
					WidthRequest="200" TextColor="#1FAECE"/>
			</StackLayout>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
